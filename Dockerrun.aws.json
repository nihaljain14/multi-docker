{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
      {
        "name": "client",
        "image": "nj14/multi-client",
        "hostname": "client",
        "essential": false
      },
      {
        "name": "server",
        "image": "nj14/multi-server",
        "hostname": "api",
        "essential": false
      },
      {
        "name": "worker",
        "image": "nj14/multi-worker",
        "hostname": "worker",
        "essential": false
      },
      {
        "name": "nginx",
        "image": "nj14/multi-nginx",
        "hostname": "nginx",
        "essential": true,
        "portMappings": [
          {
            "hostPort": 80,
            "containerPort": 80
          }
        ],
        "links": [
          "client",
          "server"
        ]
      }
    ]
  }